NODE_ENV=production
DATABASE_URL="file:./data/salon.db"
NEXTAUTH_SECRET="your-secret-here-change-in-production"
NEXTAUTH_URL="http://your-domain.com"

# Performance tuning para VM com poucos recursos
NODE_OPTIONS="--max-old-space-size=384"
NEXT_TELEMETRY_DISABLED=1

# Token para criação do admin inicial
INIT_ADMIN_TOKEN="your-secure-token-here"

# Configurações do Prisma para produção - corrige problemas de engine
PRISMA_BINARY_TARGETS="native,linux-musl-openssl-3.0.x,linux-musl-arm64-openssl-3.0.x"
PRISMA_QUERY_ENGINE_LIBRARY="./node_modules/.prisma/client/libquery_engine-linux-musl-openssl-3.0.x.so.node"